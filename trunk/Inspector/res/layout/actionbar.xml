<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout style="@style/ActionBarCompat" android:orientation="horizontal" >
    	<ImageButton style="@style/ActionBarCompatLogo" />
    	<ImageView android:layout_gravity="top|right" style="@style/ActionBarCompatSeparator" />
    	<ImageButton android:layout_gravity="top|right" android:id="@+id/actionbar_btn_home" android:src="@drawable/ic_title_home" style="@style/ActionBarCompatButton" />
    </LinearLayout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/colorstrip"
   		android:layout_width="fill_parent"
    	android:layout_height="@dimen/colorstrip_height"
    	android:foreground="@drawable/colorstrip_shadow"
    	android:background="@drawable/colorstrip" />
</merge>