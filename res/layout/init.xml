<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:weightSum="1">
    <TableLayout android:layout_width="fill_parent" android:id="@+id/tableLayout1" android:layout_height="wrap_content">
        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:text="@string/init_btn_setting" android:layout_gravity="center_vertical" android:layout_width="125dp" android:id="@+id/btn_setting" android:layout_height="wrap_content"></Button>
            <TextView android:layout_height="wrap_content" android:text="@string/init_hint_setting" android:layout_width="wrap_content" android:id="@+id/hint_setting"></TextView>
        </TableRow>
        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:text="@string/init_btn_getinfo" android:layout_gravity="center_vertical" android:layout_width="125dp" android:id="@+id/btn_getinfo" android:layout_height="wrap_content"></Button>
            <TextView android:layout_height="wrap_content" android:text="@string/init_hint_getinfo" android:layout_width="wrap_content" android:id="@+id/hint_getinfo"></TextView>
        </TableRow>
        <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:text="@string/init_btn_screenshot" android:layout_gravity="center_vertical" android:layout_width="125dp" android:id="@+id/btn_screenshot" android:layout_height="wrap_content"></Button>
            <TextView android:layout_height="wrap_content" android:text="@string/init_hint_screenshot" android:layout_width="wrap_content" android:id="@+id/hint_screenshot"></TextView>
        </TableRow>
        <TableRow android:id="@+id/tableRow4" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:text="@string/init_btn_hide" android:layout_gravity="center_vertical" android:layout_width="125dp" android:id="@+id/btn_hide" android:layout_height="wrap_content"></Button>
            <TextView android:layout_height="wrap_content" android:text="@string/init_hint_hide" android:layout_width="wrap_content" android:id="@+id/hint_hide"></TextView>
        </TableRow>
    </TableLayout>
</LinearLayout>
